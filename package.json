{
  "name": "influence",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "npx husky install",
    "dev": "turbo run dev --parallel --filter=@influence/web",
    "dev:desktop": "turbo run dev --filter=@influence/desktop",
    "dev:web": "turbo run dev --filter=@influence/web",
    "dev:server": "turbo run dev --filter=@influence/server",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "eslint .",
    "format": "prettier --check .",
    "test": "turbo run test",
    "quality": "npm run lint && npm run typecheck && npm run test",
    "make": "turbo run build --filter=@influence/desktop && electron-forge make",
    "package": "turbo run build --filter=@influence/desktop && electron-forge package"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@electron-forge/cli": "^7.10.2",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "turbo": "^2.0.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  },
  "dependencies": {
    "express": "^4.19.2",
    "react-router-dom": "^6.24.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,mjs,cjs,json,md,css}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
