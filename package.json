{
  "name": "influence",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev --parallel --filter=@influence/web",
    "dev:desktop": "turbo run dev --filter=@influence/desktop",
    "dev:web": "turbo run dev --filter=@influence/web",
    "dev:server": "turbo run dev --filter=@influence/server",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "eslint .",
    "format": "prettier --check .",
    "test": "tsx --test \"tests/**/*.ts\"",
    "quality": "npm run lint && npm run typecheck && npm run test",
    "make": "turbo run build --filter=@influence/desktop && electron-forge make",
    "package": "turbo run build --filter=@influence/desktop && electron-forge package"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@eslint/js": "^9.11.1",
    "@types/node": "^22.7.4",
    "electron": "^31.3.0",
    "electron-squirrel-startup": "^1.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "turbo": "^2.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json,md,css}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "main": "apps/desktop/dist/main.js"
}