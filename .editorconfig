# === Configuration globale du projet InfluenceOps ===
root = true

# Tous les fichiers
[*]
charset = utf-8          # âœ… Force UTF-8 pour tous les fichiers
end_of_line = lf          # Fin de ligne Linux (plus propre dans Git)
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Fichiers TypeScript / TSX / React
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 120

# Fichiers JSON, YAML, HTML, CSS
[*.{json,yml,yaml,html,css}]
indent_size = 2
