{
  "extends": "@influence/config/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": false,
    "moduleResolution": "Bundler",
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src", "vite.config.mjs", "tailwind.config.js"],
  "exclude": ["dist", "node_modules"]
}
